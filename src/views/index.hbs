<div class="uk-child-width-1-1@s uk-child-width-1-2@m uk-child-width-1-3@l uk-grid-match margin-top" uk-grid>
    {{#each movies}}
    <div>
        <div class="card hoverable">
            <div class="card-image">
                <img class="index-card-image" src="{{this.poster}}" alt="img">
            </div>
            <div class="card-content">
                <span class="card-title">{{this.title}}</span>
                <p>{{this.plot}}</p>
            </div>
            <div class="card-action">
                <a href="/p/{{this._id}}" target="_blank">Ver m√°s...</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>